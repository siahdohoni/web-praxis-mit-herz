<script>
  import {DocToLibButton} from '../cms/components/DocToLibButton.js'
  import {JamedaEmbedding} from '../cms/components/JamedaEmbedding.js'
  import {Card} from '../cms/components/Card.js'
  import {ImageBlock} from '../cms/components/ImageBlock.js'
  import {Image} from '../cms/components/Image.js'
  import {PagePreview} from "../cms/components/PagePreview.jsx";

    function register() {
        // @ts-ignore
        const CMS = window.CMS;
        CMS.registerPreviewStyle('/src/styles/global.css');
        CMS.registerPreviewStyle('/src/styles/layout.css');

        CMS.registerEditorComponent(DocToLibButton);
        CMS.registerEditorComponent(JamedaEmbedding);
        CMS.registerEditorComponent(Card);
        CMS.registerEditorComponent(ImageBlock);
        CMS.registerEditorComponent(Image);

        CMS.registerPreviewTemplate('page', PagePreview);
        CMS.registerPreviewTemplate('kinderwunsch', PagePreview);
        CMS.registerPreviewTemplate('schwangerschaft', PagePreview);
        CMS.registerPreviewTemplate('frauenheilkunde', PagePreview);
        CMS.registerPreviewTemplate('babyzeit', PagePreview);
        CMS.registerPreviewTemplate('kontakt', PagePreview);
    }

    if (document.readyState === 'complete' || document.readyState === 'interactive') {
        register();
    } else {
        window.addEventListener('DOMContentLoaded', register);
    }
</script>