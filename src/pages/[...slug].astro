---
import { type CollectionEntry, getCollection, render } from 'astro:content';
import MainLayout from '../layouts/MainLayout.astro'
import JamedaEmbedding from '../components/JamedaEmbedding.astro';
import DocToLibButton from '../components/DocToLibButton.astro';
import ImageBlock from '../components/ImageBlock.astro';

export async function getStaticPaths() {
    const pages = await getCollection('page');
    return pages.map((page) => ({
        params: { slug: page.id },
        props: page,
    }));
}
type Props = CollectionEntry<'page'>;

const page = Astro.props;
const { Content } = await render(page);
---
<MainLayout {...page.data}>
  <Content components={{JamedaEmbedding, DocToLibButton, ImageBlock}}/>
</MainLayout>
